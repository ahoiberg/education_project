<div>
	<% if @option.is_correct? %> 
		<div id="explanation">
			<h2> Correct! Good job </h2>
			<%= @option.question.explanation %>
			<% @option.question.game.score += 1 %>
			<%= @option.question.game.score %>
		</div>
	<br></br>

	<% else %> 
		<div id= "wrong">
			<h2> Sorry, try again! </h2>
			<a href="/questions/<%=@option.question.id%>">
			<button type="button" class="btn btn-default">

		Try Again
		</button>
		</div>
	<% end %>
	<% if (@option.question.id - Question.first.id) % 10 == 9 %>
			<a href="/games/<%=@option.question.game.id%>/finish">
			<button type="button" class="btn btn-default">
				Finish
			</button>
			<% else %>	
			<a href="/questions/<%=@option.question.id+1%>">	
		<button type="button" class="btn btn-default">
			Next Question
		</button>
	<% end %>
</div>
