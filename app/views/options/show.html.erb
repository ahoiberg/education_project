<% if @option.is_correct? %> 
	<div id="explanation">
		<h2> Correct! Good job </h2>
		<%= @option.question.explanation %>

		<br></br>
		<% if (@option.question.id - Question.first.id) % 10 == 9 %>
		<button type="button" class="btn btn-default">
			<%= link_to("Finish", :controller => 'games', :action => 'finish', :id => "#{@option.question.game.id}") %>
		</button>
		<% else %>

		<a href="/questions/<%=@option.question.id+1%>">
			<button type="button" class="btn btn-default">
				Next Question
			</button>
		</a>

		<% end %>
	</div>
<br></br>

<% else %> 
	<div id= "wrong">
		<h2> Sorry, try again! </h2>
		<a href="/questions/<%=@option.question.id%>">
			<button type="button" class="btn btn-default">
				Sorry, try again! 
			</button>
		</a>
		<a href="/questions/<%=@option.question.id+1%>">
			<button type="button" class="btn btn-default">
				Next Question
			</button>
		</a>
	</div>
<% end %>